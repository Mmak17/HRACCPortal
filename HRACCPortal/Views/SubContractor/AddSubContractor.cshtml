@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="kt_app_content_container" class="app-container container-xxl">
    <!--begin::Card-->

    <div class="card mb-5 mb-xl-10">
        <!--begin::Card header-->
        <div class="card-header border-0 cursor-pointer" role="button" data-bs-toggle="collapse" data-bs-target="#kt_account_profile_details" aria-expanded="true" aria-controls="kt_account_profile_details">
            <!--begin::Card title-->
            <div class="card-title m-0">
                <h3 class="fw-bold m-0">SubContractor Details</h3>
            </div>
            <!--end::Card title-->
        </div>
        <!--begin::Card header-->
        <!--begin::Content-->
        <div id="kt_account_settings_profile_details" class="collapse show">
            <!--begin::Form-->
            <form id="kt_account_profile_details_form" class="form fv-plugins-bootstrap5 fv-plugins-framework" novalidate="novalidate">
                <!--begin::Card body-->
                <div class="card-body border-top p-9">

                    <!--begin::Input group-->
                    <div class="row mb-6">
                        <!--begin::Label-->
                        <label class="col-lg-2 col-form-label required fw-semibold fs-6">Full Name</label>
                        <!--end::Label-->
                        <!--begin::Col-->
                        <div class="col-lg-10 fv-row fv-plugins-icon-container">
                            <input type="text" name="SubContractorName" id="SubContractorName" class="form-control form-control-lg form-control-solid" placeholder="Full Name">
                            <div class="fv-plugins-message-container invalid-feedback"></div>
                        </div>
                        <!--end::Col-->
                    </div>
                    <!--end::Input group-->
                    <!--begin::Input group-->
                    <div class="row mb-6">
                        <!--begin::Label-->
                        <label class="col-lg-2 col-form-label fw-semibold fs-6">
                            <span class="required">Contact Phone</span>
                        </label>
                        <!--end::Label-->
                        <!--begin::Col-->
                        <div class="col-lg-4 fv-row fv-plugins-icon-container">
                            <input type="tel" name="SubContractorContactPhone" id="SubContractorContactPhone" class="form-control form-control-lg form-control-solid" placeholder="Contact Phone">
                            <div class="fv-plugins-message-container invalid-feedback"></div>
                        </div>
                        <!--begin::Label-->
                        <label class="col-lg-2 col-form-label fw-semibold fs-6">
                            <span class="required">Contact Email</span>
                        </label>
                        <!--end::Label-->
                        <!--begin::Col-->
                        <div class="col-lg-4 fv-row fv-plugins-icon-container">
                            <input type="tel" name="SubContractorContactEmail" id="SubContractorContactEmail" class="form-control form-control-lg form-control-solid" placeholder="Contact Email">
                            <div class="fv-plugins-message-container invalid-feedback"></div>
                        </div>
                        <!--end::Col-->
                    </div>
                    <!--end::Input group-->
                    <!--begin::Input group-->
                    <div class="row mb-6">
                        <!--begin::Label-->
                        <label class="col-lg-2 col-form-label fw-semibold fs-6">
                            Contact Address1
                        </label>
                        <!--end::Label-->
                        <!--begin::Col-->
                        <div class="col-lg-10 fv-row">
                            <input type="text" name="SubContractorContactAddress1" id="SubContractorContactAddress1" class="form-control form-control-lg form-control-solid" placeholder="Contact Address1">
                        </div>
                        <!--end::Col-->
                    </div>
                    <!--end::Input group-->
                    <!--begin::Input group-->
                    <div class="row mb-6">
                        <!--begin::Label-->
                        <label class="col-lg-2 col-form-label fw-semibold fs-6">Contact Address2</label>
                        <!--end::Label-->
                        <!--begin::Col-->
                        <div class="col-lg-10 fv-row">
                            <input type="text" name="SubContractorContactAddress2" id="SubContractorContactAddress2" class="form-control form-control-lg form-control-solid" placeholder="Contact Address2">
                        </div>
                        <!--end::Col-->
                    </div>
                    <!--end::Input group-->
                    <!--begin::Input group-->
                    <div class="row mb-6">
                        <!--begin::Label-->
                        <label class="col-lg-2 col-form-label fw-semibold fs-6">City</label>
                        <!--end::Label-->
                        <!--begin::Col-->
                        <div class="col-lg-4 fv-row">
                            <input type="text" name="SubContractorContactCity" id="SubContractorContactCity" class="form-control form-control-lg form-control-solid" placeholder="City">
                        </div>
                        <!--end::Col-->
                        <!--begin::Label-->
                        <label class="col-lg-2 col-form-label fw-semibold fs-6">
                            State
                        </label>
                        <!--end::Label-->
                        <!--begin::Col-->
                        <div class="col-lg-4 fv-row">
                            <input type="text" name="SubContractorContactState" id="SubContractorContactState" class="form-control form-control-lg form-control-solid" placeholder="State">
                        </div>
                        <!--end::Col-->

                    </div>
                    <!--end::Input group-->
                    <!--begin::Input group-->
                    <div class="row mb-6">

                        <!--begin::Label-->
                        <label class="col-lg-2 col-form-label fw-semibold fs-6">
                            Zip
                        </label>
                        <!--end::Label-->
                        <!--begin::Col-->
                        <div class="col-lg-4 fv-row">
                            <input type="text" name="SubContractorContactZip" id="SubContractorContactZip" class="form-control form-control-lg form-control-solid" placeholder="Zip">
                        </div>
                        <!--end::Col-->
                        <!--begin::Label-->
                        <label class="col-lg-2 col-form-label fw-semibold fs-6">Active</label>
                        <!--begin::Label-->
                        <!--begin::Label-->
                        <div class="col-lg-4 d-flex align-items-center">
                            @*<label><input type="checkbox" id="isActive" class="chk"> Select This</label>*@

                            <div class="form-check form-check-solid form-switch form-check-custom fv-row">
                                <input class="form-check-input w-45px h-30px" type="checkbox" id="isActive">
                                <label class="form-check-label" for="isActive"></label>
                            </div>
                        </div>
                        <!--begin::Label-->
                    </div>
                    <!--end::Input group-->
                </div>
                <!--end::Card body-->
                <!--begin::Actions-->
                <div class="card-footer d-flex justify-content-end py-6 px-9">
                    <button type="submit" class="btn btn-light btn-active-light-primary me-2" id="btnReset">Discard</button>

                    <button type="submit" class="btn btn-primary" id="btnSave">Save Changes</button>
                </div>
                <!--end::Actions-->
                <input type="hidden">
            </form>
            <!--end::Form-->
        </div>
        <!--end::Content-->
    </div>
</div>

@section scripts{
    <script>
       $(function () {
           $("#btnReset").click(function (e) {
               e.preventDefault();
               window.location.href = '@Url.Action("ViewSubContractors", "SubContractor")';
           });

           $("#btnSave").click(function (e) {

            debugger;
            e.preventDefault();
           var subc = {};
               subc.SubContractorName = $("#SubContractorName").val();
               subc.SubContractorContactPhone = $("#SubContractorContactPhone").val();
               subc.SubContractorContactEmail = $("#SubContractorContactEmail").val();
               subc.SubContractorContactAddress1 = $("#SubContractorContactAddress1").val();
               subc.SubContractorContactAddress2 = $("#SubContractorContactAddress2").val();
               subc.SubContractorContactCity = $("#SubContractorContactCity").val();
               subc.SubContractorContactState = $("#SubContractorContactState").val();
               subc.SubContractorContactZip = $("#SubContractorContactZip").val();
               subc.isActive = $('input#isActive').prop('checked');
               console.log("SubContractor:" + JSON.stringify(subc))

             $.ajax({
                type: "POST",
                 url: '@Url.Action("AddSubContractor", "SubContractor")',
                 data: '{subcontractor: ' + JSON.stringify(subc) + '}',
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (response) {
                    // alert("Data has been added successfully.");
                    if (response.Message == "SUCCESS") {
                        window.location.href = '@Url.Action("ViewSubContractors", "SubContractor")';
                    } else {
                        alert("Error while inserting data");
                        return false;
                    }
                },
                error: function () {
                    alert("Error while inserting data");
                }
            });
            return false;
        });
    });
    </script>

}